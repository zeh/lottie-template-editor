// Place your settings in this file to overwrite the default settings
{
	"editor.insertSpaces": false,
	"editor.detectIndentation": false,
	"files.eol": "\n",
	"files.trimTrailingWhitespace": true,
	"files.exclude": {
		"**/.git": true,
		"**/.DS_Store": true,
		"node_modules": true
	},
	"typescript.tsdk": "./node_modules/typescript/lib",

	"typescript.format.insertSpaceAfterCommaDelimiter": true,
	"typescript.format.insertSpaceAfterOpeningAndBeforeClosingJsxExpressionBraces": true,
	"eslint.validate": ["typescript", "typescriptreact"],
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"[typescriptreact]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[typescript]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"yaml.schemas": {
		"./src/ts/data/resources/about.schema.json": "**/about.yaml",
		"./src/ts/data/resources/code.schema.json": "**/code.yaml",
		"./src/ts/data/resources/values.schema.json": "**/values.yaml",
		"./src/ts/data/resources/works.info.schema.json": "**/work/*/info.yaml",
		"./src/ts/data/resources/works.schema.json": "**/works.yaml"
	}
}
